@using SalesManager.Models
@using SalesManager.AppCode
@model CustomerEditModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Thêm/Sửa khách hàng</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Js")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>

    @using (Html.BeginForm("Edit", "Customers", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
    <div class="w3-container" style="height: 450px; overflow: auto">
        @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
        <label class="w3-label w3-left">Họ và tên:</label>
        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.FullName, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Địa chỉ:</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Điện thoại:</label>
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Mobile, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Email:</label>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Email, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Giới tính:</label>
        @Html.DropDownListFor(m => m.GenderId, new SelectList(Model.ListGenders, "GenderId", "GenderDesc", Model.GenderId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small" })
        <label class="w3-label w3-left">Ngày sinh:</label>
        @Html.TextBoxFor(m => m.DateOfBirth, "{0:dd/MM/yyyy}", new { @class = "w3-input w3-border w3-round w3-padding-small datepicker" })
        <label class="w3-label w3-left">Nhóm khách hàng:</label>
        @Html.DropDownListFor(m => m.CustomerGroupId, new SelectList(Model.ListCustomerGroups, "CustomerGroupId", "CustomerGroupDesc", Model.CustomerGroupId), new { @class = "w3-input w3-border w3-padding-small" })
        <label class="w3-label w3-left">Dư nợ:</label>
        @Html.TextBoxFor(m => m.DebitBalance, new { @class = "w3-input w3-border w3-round w3-padding-small currency", style = "font-weight: bold;" })
        <label class="w3-label w3-left">Hạn mức thanh toán:</label>
        @Html.TextBoxFor(m => m.PaymentLimit, new { @class = "w3-input w3-border w3-round w3-padding-small currency", style = "font-weight: bold;" })
        <label class="w3-label w3-left">Thứ tự hiển thị:</label>
        @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "w3-input w3-border w3-round w3-padding-small", type = "number" })
        <label class="w3-label w3-left">Ghi chú:</label>
        @Html.TextAreaFor(m => m.Note, new { @class = "w3-input w3-border w3-round w3-padding-small", rows = "4" })
        @Html.HiddenFor(m => m.CustomerId)
    </div>
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit"><i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b></button>
        </div>
    }
    <script type="text/javascript">
        $(function () {
            checkSupportForInputTypeDate();
            $(function () {
                $(".datepicker").datepicker({ dateFormat: 'dd/mm/yy' });
                $(".datepicker").datepicker("option", "monthNames", ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"]);
                $(".datepicker").datepicker("option", "monthNamesShort", ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8", "Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12"]);
                $(".datepicker").datepicker("option", "dayNamesMin", ["CN", "T2", "T3", "T4", "T5", "T6", "T7"]);
            });
        });
        function checkSupportForInputTypeDate() {
            jQuery.validator.methods.date = function (value, element) {
                var isChrome = /Chrome/.test(navigator.userAgent) && /Google Inc/.test(navigator.vendor);
                var isSafari = /Safari/.test(navigator.userAgent) && /Apple Computer/.test(navigator.vendor);
                if (isSafari || isChrome) {
                    var d = new Date();
                    return this.optional(element) || !/Invalid|NaN/.test(new Date(d.toLocaleDateString(value)));
                } else {
                    return this.optional(element) || !/Invalid|NaN/.test(new Date(value));
                }
            };
        }
    </script>
</body>
</html>
