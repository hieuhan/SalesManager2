@using SalesManager.Models
@using SalesManager.AppCode
@model UserActionsModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gán chức năng cho nhân viên</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    @using (Html.BeginForm("UserActions", "Users", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
        <div class="w3-container" style="height: 550px; overflow: auto">
            @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
            @if (Model.ListActions.HasValue())
            {
                foreach (var action in Model.ListActions)
                {
                    if (Model.ListUserActions.HasValue() && Model.ListUserActions.Select(e => e).Any(e => e.ActionId == action.ActionId))
                    {
                        <input name="ActionsId" id="chkActionId_@action.ActionId" value="@action.ActionId" class="w3-check" type="checkbox" checked="checked" />
                    }
                    else
                    {
                        <input name="ActionsId" id="chkActionId_@action.ActionId" value="@action.ActionId" class="w3-check" type="checkbox" />
                    }

                    <label for="chkActionId_@action.ActionId" class="w3-validate">@if (action.ParentActionId > 0) {
                                                         @:<span>&nbsp;&nbsp;&nbsp;</span>
                                                     }@if (action.ParentActionId == 0) { <b>@action.ActionDesc</b> } else {@action.ActionDesc}</label><br>
                }
                {
                    Html.RenderAction("PartialPagination", "Shared", new { model = Model.Pagination });
                }
            }
            @Html.HiddenFor(m => m.UserId)
        </div>
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit"><i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b></button>
        </div>
    }
</body>
</html>
